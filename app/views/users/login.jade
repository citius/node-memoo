extends ../layout

block content
  div.container
    h1.page-header Please Login
    div.row
      div.col-md-6.col-md-offset-3
        form(action="/users/signin" method="post" id="signinForm").form-horizontal.form-user-auth
          div.form-group
            label(for="email" class="col-sm-2 control-label")= "Email"
              i *
            div.col-sm-10
              input(required=true type="email" name="email" class="form-control" id="email" placeholder="Email")
              span.help-block.with-errors
          div.form-group
            label(for="password" class="col-sm-2 control-label")= "Password"
              i *
            div.col-sm-10
              input(required=true type="password" name="password" class="form-control" id="password" placeholder="Password")
              span.help-block.with-errors
          div.form-group
            div.col-sm-offset-2.col-sm-10
              div.checkbox
                label
                  input(type="checkbox" name="rememberMe")
                  | Remember Me
          div.form-group
            div.col-sm-offset-2.col-sm-10
              button(type="submit").btn.btn-default Sign in
              a(href="/users/signup" class="btn btn-link") Create an account
    hr
    div.row
      div.col-xs-6.col-xs-offset-3
        a(href="#").col-md-offset-4.col-md-2.instagram-login Instagram
        a(href="#").col-md-2.facebook-login Facebook
        a(href="#").col-md-offset-.col-md-2.vk-login Vkontakte
